{
  "name": "typescript-ddd-monorepo-template",
  "version": "0.1.0",
  "private": true,
  "description": "TypeScript DDD Monorepo Template with pnpm, Turborepo, Biome, tsup, Changesets, Docker, and Playwright",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:v": "biome format --write --verbose .",
    "format:check": "biome format .",
    "test": "turbo run test test:e2e",
    "test:unit": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "precheck": "pnpm lint:fix && pnpm format",
    "check": "pnpm format:check && pnpm lint && pnpm build && pnpm test",
    "check:fix": "pnpm format && pnpm lint:fix && pnpm build && pnpm test",
    "clean": "turbo run clean && rm -rf node_modules",
    "prepare": "husky"
  },
  "keywords": [
    "typescript",
    "ddd",
    "monorepo",
    "template",
    "pnpm",
    "turborepo",
    "biome",
    "tsup",
    "changesets",
    "docker",
    "playwright"
  ],
  "author": "",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.1",
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@commitlint/cli": "^19.8.0",
    "@commitlint/config-conventional": "^19.8.0",
    "@playwright/test": "^1.51.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.2.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsdom": "^21.1.7",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-react": "^4.3.4",
    "husky": "^9.1.7",
    "jsdom": "^26.0.0",
    "supertest": "^7.0.0",
    "tsup": "^8.4.0",
    "turbo": "^2.4.4",
    "typescript": "^5.8.2",
    "vitest": "^3.0.8"
  }
}
